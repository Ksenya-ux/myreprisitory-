class Counter(metaclass=dump):
    def __init__(self, start=0):
        self.value = start
        self.history = [start]
    
    def increment(self, amount=1, record=True):
        self.value += amount
        if record:
            self.history.append(self.value)
        return self.value
    
    def decrement(self, amount=1):
        self.value -= amount
        self.history.append(self.value)
        return self.value
    
    def reset(self):
        old_value = self.value
        self.value = 0
        self.history.append(0)
        return old_value
    
    def get_stats(self, include_history=True):
        stats = {
            'current': self.value,
            'min': min(self.history),
            'max': max(self.history)
        }
        
        # Этот параметр не будет выведен, так как это список
        if include_history:
            stats['history'] = self.history
        
        return stats

counter = Counter(10)
counter.increment(5)
